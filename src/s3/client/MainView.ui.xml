<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:AbsolutePanel>
		<g:AbsolutePanel ui:field="playground"/>
		<g:VerticalPanel ui:field="info">
			<g:Label text="Choose the skin:"/>
			<g:ListBox ui:field="skinsChooser"/>
			<g:HorizontalPanel>
				<g:Label text="width:"/>
				<g:IntegerBox ui:field="hSize" text="20" />
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Label text="height:"/>
				<g:IntegerBox ui:field="vSize" text="20" />
			</g:HorizontalPanel>
			<g:Button ui:field="applySize" text="Change size"/>
			<g:Button ui:field="button"/>
		</g:VerticalPanel>
	</g:AbsolutePanel>
</ui:UiBinder> 